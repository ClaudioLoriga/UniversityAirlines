<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <!-- <include layout = "@layout/activity_registration_success"/> -->

    <EditText
        android:id="@+id/edittextorigine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding20"
        android:layout_marginTop="@dimen/padding30"
        android:layout_marginEnd="@dimen/padding20"
        android:background="@drawable/textinputborder"
        android:hint="@string/hint_origine"
        android:inputType="text"
        android:paddingStart="@dimen/padding20"
        android:paddingTop="@dimen/padding10"
        android:paddingEnd="@dimen/padding20"
        android:paddingBottom="@dimen/padding10"
        android:textSize="@dimen/size20text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittextdestinazione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding20"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/padding20"
        android:background="@drawable/textinputborder"
        android:hint="@string/hint_destinazione"
        android:inputType="text"
        android:paddingStart="@dimen/padding20"
        android:paddingTop="@dimen/padding10"
        android:paddingEnd="@dimen/padding20"
        android:paddingBottom="@dimen/padding10"
        android:textSize="@dimen/size20text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittextorigine" />

    <EditText
        android:id="@+id/edittextandata"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding20"
        android:layout_marginTop="@dimen/padding20"
        android:layout_marginEnd="@dimen/padding5"
        android:background="@drawable/textinputborder"
        android:hint="@string/hint_andata"
        android:paddingStart="@dimen/padding10"
        android:paddingTop="@dimen/padding10"
        android:paddingEnd="@dimen/padding5"
        android:paddingBottom="@dimen/padding10"
        android:textSize="@dimen/size20text"
        app:layout_constraintEnd_toStartOf="@id/edittextritorno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittextdestinazione" />


    <EditText
        android:id="@+id/edittextritorno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding5"
        android:layout_marginTop="@dimen/padding20"
        android:layout_marginEnd="@dimen/padding20"
        android:background="@drawable/textinputborder"
        android:hint="@string/hint_ritorno"
        android:paddingStart="@dimen/padding10"
        android:paddingTop="@dimen/padding10"
        android:paddingEnd="@dimen/padding5"
        android:paddingBottom="@dimen/padding10"
        android:textSize="@dimen/size20text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edittextandata"
        app:layout_constraintTop_toBottomOf="@id/edittextdestinazione" />

    <EditText
        android:id="@+id/npasseggeriedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/textinputborder"
        android:hint="@string/npasseggeri"
        android:paddingStart="@dimen/padding10"
        android:inputType="number"
        android:paddingTop="@dimen/padding10"
        android:paddingEnd="@dimen/padding10"
        android:paddingBottom="@dimen/padding10"
        android:textSize="@dimen/size20text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittextandata" />

    <Button
        android:id="@+id/plusbutton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding20"
        android:layout_marginTop="@dimen/padding30"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/grey_app"
        android:text="@string/piu"
        app:layout_constraintStart_toEndOf="@id/npasseggeriedittext"
        app:layout_constraintTop_toBottomOf="@id/edittextritorno"
        />

    <Button
        android:id="@+id/minusbutton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding20"
        android:layout_marginTop="@dimen/padding30"
        android:background="@drawable/round_button"
        android:text="@string/meno"
        app:layout_constraintEnd_toStartOf="@id/npasseggeriedittext"
        app:layout_constraintTop_toBottomOf="@id/edittextritorno"
        />

    <Button
        android:id="@+id/cercavolibutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/padding20"
        android:text="@string/cercavoli"
        android:textSize="@dimen/size20text"
        android:layout_marginStart="@dimen/padding50"
        android:layout_marginEnd="@dimen/padding50"
        android:paddingTop="@dimen/padding15"
        android:paddingBottom="@dimen/padding15"
        android:background="@drawable/roundedbutton"/>




</androidx.constraintlayout.widget.ConstraintLayout>