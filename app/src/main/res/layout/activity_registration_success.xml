<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_app"
    tools:context=".registration.RegistrationSuccess"

    >

    <TextView
        android:id="@+id/presentationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/padding30"
        android:text="@string/registration_text"
        android:textColor="@color/white"
        android:textSize="@dimen/size28text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/subPresentationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding30"
        android:layout_marginTop="@dimen/padding80"
        android:text="@string/subRegistration_text"
        android:textColor="@color/white"
        android:textSize="@dimen/size20text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/presentationTextView"
        app:layout_goneMarginTop="@dimen/padding35" />

    <ImageView
        android:id="@+id/airplaneImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/free_airplane_jet_icon_1764_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subPresentationTextView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="416dp"
        android:layout_height="412dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/airplaneImage"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bottoneHome"
        android:layout_width="200dp"
        android:layout_height="@dimen/padding70"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/padding20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="vai alla homepage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
